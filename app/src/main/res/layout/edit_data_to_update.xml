<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="#808080">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#505050"
        android:orientation="vertical" >
        <TextView
            android:layout_width="match_parent"
            android:gravity="left|center_vertical"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="User Data"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal" >
        <Spinner
            android:id="@+id/updateUser_dropdown"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:textSize="18sp"
            android:background="@drawable/gradient_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/select"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Server"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/radioGroupServerType"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-10dp"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioTomcat1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomcat 1 (Production Server)"
            android:textSize="16dp"
            android:button="@drawable/custom_radio_button"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>

        <RadioButton
            android:id="@+id/radioTomcat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomcat 2 (Testing Server)"
            android:textSize="16dp"
            android:layout_marginTop="-15dp"
            android:button="@drawable/custom_radio_button"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:gravity="left|center_vertical"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="Data To Update"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <RadioGroup
        android:id="@+id/radioGroupDataToUpdate"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-10dp"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/radioServer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server"
            android:textSize="16dp"
            android:button="@drawable/custom_radio_button"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>

        <RadioButton
            android:id="@+id/radioDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device"
            android:textSize="16dp"
            android:layout_marginTop="-15dp"
            android:button="@drawable/custom_radio_button"
            android:buttonTint="#ffffff"
            android:textColor="#ffffff"/>
    </RadioGroup>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="20dp"
                  android:layout_gravity="center"
                  android:orientation="horizontal">
        <Button
            android:id="@+id/update_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_button"
            android:clickable="true"
            android:textAllCaps="false"
            android:text="Update"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_corner_button"
            android:clickable="true"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>