<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="#E0E0E0">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="#505050"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/lotlist_name"
            android:layout_width="match_parent"
            android:gravity="left|center_vertical"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="Lot list 2010-07-26"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternative Identifier: "
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/altIdentifier"
                  android:layout_width="155dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name: "
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/itemName"
                  android:layout_width="220dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prefix: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/prefix"
                  android:layout_width="252dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latin Name: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/latinName"
                  android:layout_width="216dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Type: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/itemTypeName"
            android:layout_width="225dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Container: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/containerTypeName"
            android:layout_width="228dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent Location: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/parentlocationSpinner"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/childlocationSpinner"
            android:layout_width="236dp"
            android:layout_height="30dp"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/gradient_spinner"
            android:paddingLeft="10dp"
            android:prompt="@string/select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/quantity"
                  android:layout_width="237dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:inputType="number"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale: "
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <EditText android:id="@+id/scale"
                  android:layout_width="256dp"
                  android:layout_height="30dp"
                  android:paddingLeft="5dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/editext_rounded_corner"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="15dp"
                  android:layout_marginBottom="20dp"
                  android:layout_gravity="center"
                  android:orientation="horizontal">
        <Button
            android:id="@+id/add_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_corner_button"
            android:clickable="true"
            android:textAllCaps="false"
            android:text="Add"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_corner_button"
            android:clickable="true"
            android:textAllCaps="false"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>
</LinearLayout>