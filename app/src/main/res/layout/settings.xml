<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#387C44">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_centerHorizontal="true"
                  android:layout_centerVertical="true"
                  android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/logo"/>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="90dp"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:id="@+id/server"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Tomcat 1 (Production Server)"
                      android:layout_marginLeft="10dp"
                      android:textColor="#ffffff"
                      android:textSize="20sp"
                      android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="35dp"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update User:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:id="@+id/updateUser"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Server"
                      android:layout_marginLeft="10dp"
                      android:textColor="#ffffff"
                      android:textSize="20sp"
                      android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="35dp"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data To Update:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:id="@+id/updateData"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Server"
                      android:layout_marginLeft="10dp"
                      android:textColor="#ffffff"
                      android:textSize="20sp"
                      android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:layout_marginTop="35dp"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Operation:"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView android:id="@+id/lastOperation"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Download Data From Server"
                      android:layout_marginLeft="10dp"
                      android:textColor="#ffffff"
                      android:textSize="20sp"
                      android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/update_button"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner_button"
            android:clickable="true"
            android:textAllCaps="false"
            android:text="Update Settings"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>

